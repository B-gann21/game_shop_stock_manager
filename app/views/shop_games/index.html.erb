<div>
  <strong style="border: 1px dashed black">Data Filters</strong><br/>
  <%= link_to "Sort Alphabetically", "/game_shops/#{params[:id]}/video_games?order=alpha", method: :get %>
  <%= form_with url: "/game_shops/#{params[:id]}/video_games?quantity=#{params[:quantity]}", method: :get, local: true do |form| %>
    <%= form.label :quantity, "Show games that cost over: "%>
    <%= form.number_field :quantity, style: "width: 25%"%>
    <%= form.submit "Filter" %>
  <% end %><br/>
</div><br/>

<h1 class="game-header">Games from shop # <%= params[:id] %></h1><br/>

<% @video_games.each do |game| %>
  <section id="video-game-<%= game.id %>">
    <h2>
      <a href="/video_games/<%= game.id %>"><%= game.name %></a>
    </h2>
    <p>ID: <%= game.id %>
    <p>Rating: <%= game.rating %></p>
    <p>Price: <%= game.price %></p>
    <p>Multiplayer: <%= game.multiplayer %></p>
    <p>Created at: <%= game.created_at %></p>
    <p>Updated at: <%= game.updated_at %></p>
    <%= link_to "Edit #{game.name}", "/video_games/#{game.id}/edit" %>
  </section><br/>
<% end %>

<footer>
  <a href="/video_games/">Video Game Index</a><br/>
  <a href="/game_shops/">Game Shop Index</a><br/>
  <%= link_to "Add to stock", "/game_shops/#{params[:id]}/video_games/new" %>
</footer>
